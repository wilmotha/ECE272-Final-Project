vsim -gui work.Button_Decoder work.Button_Verify work.clock_counter work.decoder work.LED_top_module work.math work.mux2 work.mux4 work.Parser work.state_machine

#Change wave button and sevenseg to radix binary for easier readability
#Scroll though each state and view what the sevenseg output is
#left most bit in sevenseg is a, rightmost is g


#Add Top Level Inputs and Ouputs
add wave /LED_top_module/reset_n
add wave /LED_top_module/button
add wave /LED_top_module/sevenseg
add wave /LED_top_module/state

#Force reset to be 0 for 50 ps, thus reseting everything
force /LED_top_module/button 2#1111_1111_1111_1111 @ 0
force /LED_top_module/reset_n 0 @ 0
force /LED_top_module/reset_n 1 @ 50


#After the reset, start inputing button presses
force /LED_top_module/button 2#1111_1111_1111_1101 @ 50   	# value = 2
force /LED_top_module/button 2#1111_1111_1111_1110 @ 150	# value = 1
force /LED_top_module/button 2#1111_1011_1111_1111 @ 250  	# value = 11
force /LED_top_module/button 2#1111_1111_1111_1101 @ 350	# value = 2
force /LED_top_module/button 2#1111_1111_1111_1110 @ 450	# value = 1

force /LED_top_module/button 2#1011_1111_1111_1111 @ 550	# value = 15

#cycle through each state every 10 ps
force /LED_top_module/state 0 @ 0, 1 @ 10, 3 @ 20, 4 @ 30 -repeat 40

run 650